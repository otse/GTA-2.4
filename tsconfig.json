{
    "compilerOptions": {
        "sourceMap": false,
        "module": "es6",
        "target": "es6",
        "jsx": "preserve",
        "lib": [
            "dom",
            "es6"
        ],
        "outDir": "js/",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./goldsrc",
        "paths": {
            "@app/*": [
                "*"
            ]
        }
    },

    "files": [
        "goldsrc/KILL.d.ts",
        "goldsrc/exports.d.ts"
    ],

    "include": [
        "goldsrc",
        "src2"
    ],

    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}